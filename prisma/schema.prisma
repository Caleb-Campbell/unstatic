// schema.prisma

datasource db {
  provider = "postgresql" // Or another database provider like 'mysql' or 'sqlite'
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Developer {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  projects  Project[] @relation("ProjectDevelopers")
}

model Client {
  id        Int       @id @default(autoincrement())
  name      String
  email     String    @unique
  projects  Project[] @relation("ProjectClients")
}

model Project {
  id          Int       @id @default(autoincrement())
  name        String
  developers  Developer[] @relation("ProjectDevelopers")
  clients     Client[]    @relation("ProjectClients")
  folders     Folder[]
}

model Folder {
  id        Int      @id @default(autoincrement())
  name      String
  parentId  Int?
  parent    Folder?  @relation("SubFolders", fields: [parentId], references: [id])
  children  Folder[] @relation("SubFolders")
  images    Image[]
  projectId Int
  project   Project  @relation(fields: [projectId], references: [id])
}

model Image {
  id        Int     @id @default(autoincrement())
  label     String
  url       String
  folderId  Int
  folder    Folder @relation(fields: [folderId], references: [id])
}
